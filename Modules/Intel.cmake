set (FP_MODEL_STRICT "-fp-model strict")
set (MC_MODEL_MEDIUM "-mcmodel medium")
set (FP_STACK_CHECK "-fp-stack-check -fstack-protector")
set (FP_MODEL_CONSISTENT "-fp-model consistent")
set (CHECKALL "-check all")
set (DEBUGALL "-debug")
set (IPOPT "-ip")
set (HEAP_ARRAYS "-heap-arrays")
set (NOOMPCC "-assume nocc_omp")
set (MKL_FLAG "-mkl")

set (OPTREPORT0 "-qopt-report0")
set (OPTREPORT5 "-qopt-report5")

set (FREAL8 "-r8")
